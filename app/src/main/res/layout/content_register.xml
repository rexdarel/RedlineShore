<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xxxlarge"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rexdarel.redline.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_xmedium"
        android:text="I am" />

    <Button
        android:id="@+id/buttonRegisterUser"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Looking For Health Services" />

    <Button
        android:id="@+id/buttonRegisterProvider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:text="A Health Provider" />
</LinearLayout>
